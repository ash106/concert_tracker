<header>
  <h1>Sign In</h1>
</header>

<%= form_tag(session_path) do %>
  <p>
    <%= label_tag :email %><br />
    <%= email_field_tag :email, nil, autofocus: true, size: 40, required: true %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password, nil, size: 40, required: true %>
  </p>
  <p>
    <%= submit_tag 'Sign In', class: "btn btn-primary" %>
  </p>
<% end %>

<p>
  No account yet? <%= link_to 'Sign up!', signup_path %>
</p>